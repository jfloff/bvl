<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Novo <strong>Voluntário</strong>? 
    	<%= link_to "Registo para Voluntários!", new_volunteer_path %>
    </p>
    <p>Nova <strong>Entidade</strong>?
    	<%= link_to "Registo para Entidades!", new_entity_path %>
    </p>
    </ul>
  </div>
</div>